<link href="{{ 'custom-product-overview.css' | asset_url }}" rel="stylesheet" type="text/css" media="all">

{% if product.metafields.custom.product_overview -%}
  <div class="product-overview">
    <span class="text">Overview</span>
    <div class="overview-box">
      {% for attr in product.metafields.custom.product_overview.value.attrs %}
        {% if attr.value %}
          <div class="overview-box-item">
            <img src="{{ attr.image }}" lazy="loaded" >
            <div class="info">
              <span class="key">{{ attr.key }}:</span>
              <span class="value">{{ attr.value }}</span>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endif %}
<div class="product-desc">
  <span class="desc">Descprition</span>
  {{ content }}
</div>
